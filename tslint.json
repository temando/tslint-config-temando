{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-config-standard"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "ter-indent": [
      true,
      2
    ],
    "member-access": [
      false
    ],
    "semicolon": [
      true,
      "always"
    ],
    "max-line-length": [
      false
    ],
    "ter-max-len": [
      true,
      130,
      {
        "ignoreComments": true
      }
    ],
    "no-angle-bracket-type-assertion": false,
    "no-object-literal-type-assertion": [
      false
    ],
    "object-literal-sort-keys": false,
    "no-default-export": true,
    "ter-func-call-spacing": [
      true
    ],
    "curly": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "object-literal-key-quotes": [
      true,
      "consistent-as-needed"
    ],
    "object-curly-spacing": [
      true,
      "always"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "space-in-parens": [
      true,
      "never"
    ],
    "no-submodule-imports": false,
    "return-undefined": false,
    "await-promise": [
      true,
      "Thenable",
      "Bluebird"
    ]
  }
}